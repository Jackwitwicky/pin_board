
<div id="pin_show">
  <div class="pin-title">
    <%= @pin.title %>
    <span class="pull-right"><%= link_to "Back", root_path, class: "btn btn-lg btn-warning" %></span>
  </div>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= image_tag @pin.image.url %>
        </div>

        <div class="panel-body">
          <p>
            <%= @pin.description %>
          </p>
        </div>

        <div class="panel-footer">
            <div class="user">
              Submitted by <%= @pin.user.name %>
              <div class="pull-right">
                <% if logged_in? %>
                    <%= link_to like_pin_path, class: "btn btn-default" do %>
                        <% if current_user.liked? @pin %>
                            <span class="glyphicon glyphicon-heart"> <%= @pin.get_likes.size %></span>
                        <% else %>
                            <span class="glyphicon glyphicon-heart-empty"> <%= @pin.get_likes.size %></span>
                        <% end %>
                    <% end %>

                    <% if current_user == @pin.user %>
                        <%= link_to "Edit", edit_pin_path(@pin), class: "btn btn-sm btn-default" %>
                        <%= link_to "Delete", pin_path(@pin), method: :delete , data: {confirm: "Are you sure?"},
                                 class: "btn btn-sm btn-default" %>
                    <% end %>
                <% end %>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
